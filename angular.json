{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "logger": {
      "root": "projects/logger",
      "sourceRoot": "projects/logger/src",
      "projectType": "library",
      "prefix": "rg",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "changeDetection": "OnPush",
          "flat": false
        },
        "@schematics/angular:pipe": {
          "flat": false
        },
        "@schematics/angular:directive": {
          "flat": false
        },
        "@schematics/angular:service": {
          "flat": false
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/tsconfig.lib.json",
            "project": "projects/ng-package.json"
          }
        ,          "configurations": {
            "production": {
              "tsConfig": "projects/logger/tsconfig.lib.prod.json"
            }
          }
},
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/logger/test.ts",
            "tsConfig": "projects/tsconfig.spec.json",
            "karmaConfig": "projects/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/tsconfig.lib.json",
              "projects/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "logger"
}
